# Backend Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Node Environment
NODE_ENV=production
PORT=3001

# Database Configuration
# Option 1: Vercel Postgres
# DATABASE_URL=postgres://default:YOUR_PASSWORD@YOUR_HOST.postgres.vercel-storage.com:5432/verceldb?sslmode=require

# Option 2: Supabase
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# Option 3: Neon
# DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST.neon.tech/YOUR_DB?sslmode=require

# Direct connection for migrations (required for Prisma)
DIRECT_URL=${DATABASE_URL}

# Supabase Authentication
SUPABASE_URL=https://qlhkefgrafakbrcwquhv.supabase.co
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET_HERE
# Get JWT secret from: Supabase Dashboard > Settings > API > JWT Secret

# Legacy Clerk Authentication (kept for backwards compatibility)
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET_HERE
CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# CORS Configuration
FRONTEND_URL=https://your-app-name.vercel.app

# Optional: Redis for caching
# REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_HOST:6379

# Optional: Email Service (SendGrid, Resend, etc.)
# EMAIL_API_KEY=YOUR_EMAIL_API_KEY
# EMAIL_FROM=noreply@your-domain.com

# Optional: Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your_new_relic_key