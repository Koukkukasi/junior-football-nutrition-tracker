{
  "branch_protection_rules": {
    "main": {
      "required_status_checks": {
        "strict": true,
        "contexts": [
          "Code Quality Analysis",
          "Security Analysis",
          "Performance Testing",
          "Test Coverage",
          "Quality Gates"
        ]
      },
      "enforce_admins": false,
      "required_pull_request_reviews": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews": true,
        "require_code_owner_reviews": true,
        "dismissal_restrictions": {
          "users": [],
          "teams": ["maintainers"]
        }
      },
      "restrictions": null,
      "allow_force_pushes": false,
      "allow_deletions": false,
      "required_conversation_resolution": true,
      "quality_gates": {
        "minimum_quality_score": 50,
        "maximum_issues": 100,
        "minimum_test_coverage": 70,
        "security_score_threshold": 85,
        "bundle_size_limit_mb": 2
      }
    },
    "develop": {
      "required_status_checks": {
        "strict": false,
        "contexts": [
          "Code Quality Analysis",
          "Test Coverage"
        ]
      },
      "enforce_admins": false,
      "required_pull_request_reviews": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews": false,
        "require_code_owner_reviews": false
      },
      "restrictions": null,
      "allow_force_pushes": false,
      "allow_deletions": false,
      "required_conversation_resolution": false,
      "quality_gates": {
        "minimum_quality_score": 40,
        "maximum_issues": 150,
        "minimum_test_coverage": 60,
        "security_score_threshold": 75,
        "bundle_size_limit_mb": 3
      }
    }
  },
  "automated_rules": {
    "auto_merge": {
      "enabled": true,
      "conditions": {
        "author": "dependabot[bot]",
        "labels": ["dependencies", "minor"],
        "checks_passed": true,
        "quality_score_minimum": 60
      }
    },
    "stale_pr_warning": {
      "enabled": true,
      "days_until_stale": 7,
      "days_until_close": 14,
      "exempt_labels": ["work-in-progress", "blocked"]
    },
    "code_review_assignment": {
      "enabled": true,
      "reviewers": {
        "by_component": {
          "client/": ["frontend-team"],
          "server/": ["backend-team"],
          "agents/": ["ai-team"]
        },
        "by_label": {
          "critical": ["senior-devs"],
          "security": ["security-team"]
        }
      }
    }
  },
  "notifications": {
    "slack": {
      "enabled": false,
      "webhook_url": "${SLACK_WEBHOOK_URL}",
      "channels": {
        "quality_alerts": "#code-quality",
        "security_alerts": "#security",
        "build_failures": "#ci-cd"
      }
    },
    "email": {
      "enabled": true,
      "recipients": {
        "quality_drops": ["team@example.com"],
        "security_issues": ["security@example.com"]
      }
    }
  }
}